name: {{name}}
version: 0.1.0
docstring: Generates a simple Java application.
description: Generates a simple Java application that prints a Hello World message.

dartrix: {{version.dartrix}}

params:

- name       : greeting
  abbr       : g
  docstring  : A greeting
  type       : string
  defaultsTo : Hello

- name       : addressee
  abbr       : a
  docstring  : Addressee
  type       : string
  defaultsTo : World

# - name       : proj
#   abbr       : p
#   docstring  : Name of project
#   type       : string
#   defaultsTo : myproj
#   seg        : PROJ

- name       : domain
  abbr       : d
  docstring  : Domain
  type       : segmented.string
  defaultsTo : example.org
  seg        : DOMAIN

- name       : subdomain
  abbr       : s
  docstring  : Subdomain part of domain.
  help       : E.g., in foo.bar.baz.com the sudomain is foo (or foo.bar)
  type       : string
  defaultsTo : greetings
  seg        : SUBDOM

- name       : class
  abbr       : c
  docstring  : Class name.
  help       : Java class name.
  type       : string
  defaultsTo : Hello
  seg        : CLASS

- name         : out
  abbr         : o
  docstring    : Output directory.
  help         : Output directory, relative to current working directory.
  type         : _out_prefix
  defaultsTo   : myjava

- name       : source
  docstring  : Source path.
  type       : subpath
  defaultsTo : src/main/java
  help       : The source directory structure for the generated project.
  seg        : SRC
