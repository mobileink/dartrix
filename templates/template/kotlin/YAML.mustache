name         : {{name}}
version      : 0.2.0
docstring    : A Hello World template, in Kotlin
description  : Generates a Kotlin app that prints a hello msg.

dartrix      : {{version.dartrix}}

params:
  sys:
    - id : ns
    - id : nsx
    - id : out
      defaultsTo : mykotlin

  user:
    - name       : greeting
      abbr       : g
      docstring  : Greeting
      typeHint   : string
      defaultsTo : Hello
    - name       : addressee
      abbr       : a
      docstring  : Addressee of msg
      typeHint   : string
      defaultsTo : World
    - name       : class
      abbr       : c
      docstring  : Class name.
      help       : Java class name.
      typeHint   : string
      defaultsTo : Hello
      seg        : CLASS
    - name       : source
      docstring  : Source path.
      typeHint   : subpath
      defaultsTo : src/main/kotlin
      help       : The source directory structure for the generated project.
      seg        : SRC
